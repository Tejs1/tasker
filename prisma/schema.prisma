generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  clerkId String @unique @map("clerk_id")
  email   String @unique
  name    String

}

model Task {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  status    String  
  clerkId   String  @map("clerk_id")


  @@index([clerkId])
}
